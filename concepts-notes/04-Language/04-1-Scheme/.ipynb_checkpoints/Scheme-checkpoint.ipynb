    ";----------------------------------------------\n",
    "; scheme: Reading from keyboard, list car / cdr\n",
    ";----------------------------------------------\n",
    "\n",
    "(define x (read))\n",
    "(begin (define a (read)) (define b (read)))\n",
    "\n",
    "(begin\n",
    "  (define a (read))\n",
    "  (define b (read))\n",
    "  (display a)\n",
    "  (display b))\n",
    "  \n",
    "(define z (read))\n",
    "     z\n",
    "=> (1 2 3 4 5)\n",
    "   (car z)\n",
    "=> 1\n",
    "   (cdr z)\n",
    "=> (2 3 4 5)\n",
    "\n",
    "(define z (read))\n",
    "(begin\n",
    "display(car z) (display \" \") (display (cdr z)))"
