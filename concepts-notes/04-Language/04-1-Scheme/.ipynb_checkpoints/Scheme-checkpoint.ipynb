    "=> \"string\"\n",
    "\n",
    "   (set! x 3)  ; set! can't define variable\n",
    "   (define y 4)\n",
    "   (define op)\n",
    "   (set! op +) ; set can name operator\n",
    "   (op x y)\n",
    "   \n",
    "   (define op *)\n",
    "   (op x y)\n",
    "=> 12"
