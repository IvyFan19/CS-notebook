    ";----------------------------------------------\n",
    "; =       ;numerical comparison \n",
    "; eq?     ;equal beased pointer (role: rename function)\n",
    "; equal?  ;same printed representation\n",
    "; eqv?    ;numerical, string comparison\n",
    ";----------------------------------------------\n",
    "\n",
    "(define one 1)\n",
    "(define two 2)\n",
    "(define 1st '(1 2 3))\n",
    "(define pair (cons 'a 'b))\n",
    "(define str \"string\")\n",
    "(define sym 'symbol)\n",
    "(define fun1 (lambda (n) (* n n))\n",
    "\n",
    "   (= 2 two)\n",
    "=> #t\n",
    "   (= \"123\" \"113\")\n",
    "Error: =: number required,\n",
    "   (= 1 1.0)\n",
    "=> #t\n",
    "\n",
    "   (equal? 1st '(1 2 3))\n",
    "=> #t\n",
    "   (equal? one 1)\n",
    "=> #t\n",
    "   (equal? (+ one 1) two)\n",
    "=> #t\n",
    "   (equal? str sym)\n",
    "=> #f   \n",
    "   (equal? fun1 fun1)\n",
    "=> #t"
