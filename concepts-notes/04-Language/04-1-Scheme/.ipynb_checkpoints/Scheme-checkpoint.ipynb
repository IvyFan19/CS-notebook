    ";----------------------------------------------\n",
    ";conditional structure: begin, if, cond, case, do\n",
    ";---------------------------------------------- \n",
    "\n",
    "(define x 123)\n",
    "(begin (set! x 5) (+ 1 x)); set! + declare ~ define\n",
    "\n",
    "(define one 1)\n",
    "(define seven 7)\n",
    "(if (> one seven) 'yes 'no)\n",
    "\n",
    "(if (= seven (+ 3 4)) 'yes 'no)\n",
    "\n",
    "(define x 3)\n",
    "(define y 4)\n",
    "(cond ((> x y) 'greater)\n",
    "      ((< x y) 'less)\n",
    "      (else 'equal))\n",
    "\n",
    "(set! x 4)\n",
    "(cond ((> x y) 'greater)\n",
    "      ((< x y) 'less)\n",
    "      (else 'equal))\n",
    "\n",
    "\n",
    "(define test \n",
    "  (lambda (x)\n",
    "    (case x\n",
    "      (1 'odd)\n",
    "      (3 'odd)\n",
    "      (else 'not define'))))\n",
    "\n",
    "\n",
    "(define test\n",
    "(lambda (x)\n",
    "(case x\n",
    "((1 3 5) 'odd)\n",
    "((2 3 6) 'even)\n",
    "(else 'not))))\n",
    "\n",
    "(do ((k 1 (+ k 1)))             ; init\n",
    "    ((> k 5) (display \" \"))     ; terminate statement\n",
    "    (display k) (display \" \"))  ; body\n",
    "\n",
    "; recursive version \n",
    "; sum1: 5+4+3+2+1\n",
    "(define (sum n)\n",
    "        (cond ((<= n 0)  0)\n",
    "          (else (+ n (sum (- n 1))))))\n",
    "\n",
    "; sum2: 5+4+3+2+1\n",
    "(define sum (lambda (n)\n",
    "                 (if (< n 1)\n",
    "                     0\n",
    "                     (+ n (sum (- n 1))))))\n",
    "          \n",
    "; fact: 5*4*3*2*1\n",
    "(define fact (lambda (n)\n",
    "                 (if (< n 2)\n",
    "                     1\n",
    "                     (* n (fact (- n 1)))))\n",
    "          "
   ]
